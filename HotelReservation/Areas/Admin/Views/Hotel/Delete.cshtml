@model Entity.ViewModels.HotelViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h2>Delete Hotel</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>City</dt>
        <dd>@Model.City</dd>
        <dt>Country</dt>
        <dd>@Model.Country</dd>
        <dt>Address</dt>
        <dd>@Model.Address</dd>
        <dt>Rating</dt>
        <dd>@Model.Rating</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Hotel", new { id = Model.HotelId }, FormMethod.Post))
    {
        <input type="submit" value="Delete" class="btn btn-danger" />

        @Html.ActionLink("Back to List", "Index")
        ;
    }
</div>
