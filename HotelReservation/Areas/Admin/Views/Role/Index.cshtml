@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Oteller Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">

            <a asp-action="Create" asp-controller="Role" asp-area="Admin">Role Ekle</a>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td><a asp-action="Edit" asp-controller="Role" asp-route-id="@item.Id" asp-area="Admin">Role  Ata</a></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">
                            <div class="alert alert-danger text-center">
                                Kayıtlı rol bulunmamaktadır.
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>