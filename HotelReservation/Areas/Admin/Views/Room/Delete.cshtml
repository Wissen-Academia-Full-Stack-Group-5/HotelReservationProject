@model RoomViewModel

@{
    ViewBag.Title = "Delete Room";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Room</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room Number
        </dt>
        <dd class="col-sm-10">
            @Model.RoomNumber
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Model.Type
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dd class="col-sm-10">
            @Model.City
        </dd>
        <dd class="col-sm-10">
            @Model.Country
        </dd>
        <dd class="col-sm-10">
            @Model.HotelId
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RoomId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index " asp-area="Admin" class="btn btn-secondary">Cancel</a>
    </form>
</div>