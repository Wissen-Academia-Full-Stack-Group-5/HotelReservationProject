@model IEnumerable<Entity.Entites.Reservation>

@{
    ViewData["Title"] = "My Reservations";
    Layout = "~/Views/Shared/_LayoutHotel.cshtml";
}

<div class="hero-wrap js-fullheight" style="background-image: url('/themes/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax="properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Anasayfa</a></span></p>
                <h1 class="mb3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Rezervasyonlarım</h1>
            </div>
        </div>
    </div>
</div>
<br />
<hr />
@if (Model == null || !Model.Any())
{
    <div class="container">
        <div class="alert alert-info" role="alert">
            Rezervasyonunuz bulunmamaktadır.
        </div>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Rezervasyon No</th>
                    <th>Hotel Adı</th>
                    <th>Oda Tipi</th>
                    <th>Giriş Tarihi</th>
                    <th>Çıkış Tarihi</th>
                    <th>Toplam Fiyat</th>
                    <th>Rezervasyon Durumu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.ReservationId</td>
                        <td>@reservation.Room.Hotel.Name</td>
                        <td>@reservation.Room.Type</td>
                        <td>@reservation.CheckInDate.ToString("d")</td>
                        <td>@reservation.CheckOutDate.ToString("d")</td>
                        <td>@reservation.TotalPrice.ToString("C")</td>
                        <td>@reservation.ReservationStatus</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}