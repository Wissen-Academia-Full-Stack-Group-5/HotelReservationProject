@model Entity.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Confirm Reservation";
    Layout = "~/Views/Shared/_LayoutHotel.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Rezervasyonunu Onayla</title>
    <style>
        .btn-primary {
            position: relative;
            z-index: 10; 
        }
        
        .container {
            position: relative;
            z-index: 10; 
        }
    </style>
</head>
<body>
    <div>
        <div class="hero-wrap js-fullheight" style="background-image: url('/themes/images/oceanview.jpg');">
            <div class="overlay"></div>
            <div class="container">
                <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
                    <div class="col-md-9 text-center ftco-animate" data-scrollax="properties: { translateY: '70%' }">
                        <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Anasayfa</a></span> </p>
                        <h1 class="mb3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Rezervasyonunuzu <br /> Onaylayın    </h1>
                    </div>
                </div>
            </div>
        </div>

        <br />
    </div>


    <div class="container mt-5">
        <h2>Rezervasyonunu Onayla</h2>




        <form asp-action="ConfirmReservationPost" method="post">
            <input type="hidden" asp-for="RoomId" />
            <input type="hidden" asp-for="CustomerId" />
            <div class="form-group">
                <label>Giriş Tarihi</label>
                <input type="text" class="form-control" asp-for="CheckInDate" readonly />
            </div>
            <div class="form-group">
                <label>Çıkış Tarihi</label>
                <input type="text" class="form-control" asp-for="CheckOutDate" readonly />
            </div>
            <div class="form-group">
                <label>Kişi Sayısı</label>
                <input type="text" class="form-control" asp-for="NumberOfGuests" readonly />
            </div>
            <div class="form-group">
                <label>Oda Tutarı</label>
                <input type="text" class="form-control" asp-for="RoomPrice" readonly />
            </div>
            <div class="form-group">
                <label>Toplam Tutar</label>
                <input type="text" class="form-control" asp-for="TotalPrice" readonly />
            </div>
            <div class="form-group">
                <label>Şehir</label>
                <input type="text" class="form-control" asp-for="City" readonly />
            </div>
            <div class="form-group">
                <label>Oda Tipi</label>
                <input type="text" class="form-control" asp-for="Type" readonly />
            </div>
            <div class="form-group">
                <label>Rezervasyon Durumu</label>
                <input type="text" class="form-control" asp-for="ReservationStatus" readonly />
            </div>
            <button type="submit" class="btn btn-primary">Onayla ve Ödemeye Devam Et</button>
        </form>
    </div>
</body>
</html>