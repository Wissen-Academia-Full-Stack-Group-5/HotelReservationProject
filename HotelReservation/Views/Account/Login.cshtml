@using Entity.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutHotel.cshtml";
}

<div class="hero-wrap js-fullheight" style="background-image: url('/themes/images/bg_1.jpg'); position: relative;">
    <div class="overlay"></div>
    <div class="container h-100">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-lg mt-5" style="background-color: rgba(255, 255, 255, 0.5);">
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="Login" method="post" style="color: black;">
                            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
                             
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
                              
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">  <strong> Beni Hatırla</strong>    </label>
                            </div>

                            <div class="d-grid">
                                <input type="submit" value="Giriş Yap" class="btn btn-primary btn-block" />
                            </div>
                        </form>
                        <div class="card-footer text-center py-3">
                           
                                <a asp-action="Register" asp-controller="Account">Yeni üye kayıt</a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
