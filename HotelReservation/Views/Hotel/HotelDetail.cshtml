@model Entity.ViewModels.HotelViewModel

<div>
    <h1>@Model.Name</h1>
    <img src="@Model.PictureUrl" alt="@Model.Name" style="max-width:100%;" />
    <p><strong>Address:</strong> @Model.Address, @Model.City, @Model.Country</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Rating:</strong> @Model.Rating</p>
</div>
