@model SuccessViewModel

@{
    ViewData["Title"] = "Rezervasyon Başarılı";
    Layout = "~/Views/Shared/_LayoutHotel.cshtml"; 
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Rezervasyon Başarılı!</h2>
                </div>
                <div class="card-body text-center">
                    <p>Rezervasyonunuz başarıyla gerçekleştirildi. Rezervasyon detaylarınız aşağıdadır:</p>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Otel:</strong> @Model.HotelName</li>
                        <li class="list-group-item"><strong>Otel Adresi:</strong> @Model.HotelAddress</li> 
                        <li class="list-group-item"><strong>Oda Tipi:</strong> @Model.RoomType</li>
                        <li class="list-group-item"><strong>Giriş Tarihi:</strong> @Model.CheckInDate.ToString("dd/MM/yyyy")</li>
                        <li class="list-group-item"><strong>Çıkış Tarihi:</strong> @Model.CheckOutDate.ToString("dd/MM/yyyy")</li>
                        <li class="list-group-item"><strong>Toplam Ücret:</strong> @Model.TotalPrice.ToString("C")</li>
                    </ul>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Ana Sayfaya Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>
